<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold text-primary" href="#">Logo</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-3">
          <li class="nav-item">
            <a class="nav-link active" href="#">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Student Service</a>
          </li>
        </ul>
      </div>
      <div class="d-flex align-items-center">
        <div class="rounded-circle bg-secondary text-white text-center me-3" style="width: 40px; height: 40px; line-height: 40px;">
          <%= studentInitials %>
        </div>
        <button class="btn btn-primary">User</button>
      </div>
    </div>
  </nav>

  <!-- Main Layout -->
  <div class="container my-4">
    <div class="row">
      <!-- Sidebar (Classes) -->
      <div class="col-md-3">
        <div class="card shadow-sm">
          <div class="card-header fw-bold">Classes</div>
          <ul class="list-group list-group-flush">
            <% enrolledCourses.forEach(function(course) { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= course.course.course_name %>
                <input type="checkbox" class="form-check-input">
              </li>
            <% }); %>
          </ul>
        </div>
      </div>

      <!-- Main Content (Modules) -->
      <div class="col-md-9">
        <div class="card shadow-sm">
          <div class="card-header fw-bold">Modules</div>
          <div class="card-body">
            <!-- Dropdown to select a class from enrolled courses -->
            <div class="mb-3">
              <label class="form-label">Select Class</label>
              <select class="form-select">
                <% enrolledCourses.forEach(function(course) { %>
                  <option value="<%= course.course.course_name %>"><%= course.course.course_name %></option>
                <% }); %>
              </select>
            </div>

            <!-- Loop over enrolled courses to display course details and modules -->
            <% enrolledCourses.forEach(function(course) { %>
              <div class="card mb-3">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><%= course.course.course_name %></h5>
                    <div>
                      <span class="badge bg-success">Enrolled</span>
                    </div>
                  </div>
                  <p class="text-muted"><%= course.course.description %></p>
                  <button class="btn btn-primary">View Details</button>
                </div>
              </div>
            <% }); %>

          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
